<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.rs.hellocompute" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-sdk android:minSdkVersion="11" />

    <application android:label="@string/app_title" >
        <activity
            android:name=".ExampleListActivity"
            android:label="@string/app_title">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ExampleDetailActivity"
            android:label="@string/app_title">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ExampleListActivity" />
        </activity>
        <activity android:name=".ColorizerActivity"/>
        <activity android:name=".MonochromeActivity"/>
        <activity android:name=".FlipActivity"/>
        <activity android:name=".SepiaActivity"/>
        <activity android:name=".BrightnessActivity"/>
        <activity android:name=".ThresholdingActivity"/>
        <activity android:name=".ConvolutionActivity"/>
    </application>

</manifest>